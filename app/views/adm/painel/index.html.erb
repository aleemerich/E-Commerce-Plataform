<%= javascript_include_tag 'painel' %>
<%= javascript_include_tag 'ajax' %>
<script>
	setTimeout("atualizaPainel()",15000);
</script>
<div id="mainFull">
	<div class="block">
		<div id="painel_conteudo">
			<table>
			  <tr>
			    <th>CÃ³digo</th>
			    <th>Criado em</th>
			    <th>Modificado em</th>
			    <th>Cliente</th>
			    <th>Valor</th>
			    <th>Status</th>
			  </tr>
			<% @adm_pedidos.each do |adm_pedido| %>
			  <tr onclick="redirecionarURL('/adm/painel/<%= adm_pedido.id %>')" class="<%= alerta_painel(adm_pedido.status.codigo)%>">
			    <td><%= "%07d" % adm_pedido.id %></td>
			    <td><%= adm_pedido.created_at.strftime("%d/%m/%Y %H:%M") %></td>
			    <td><%= adm_pedido.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
			    <td><%= adm_pedido.cliente_id.nil? ? 'Sem cliente atribuido' : adm_pedido.cliente.nome_completo %></td>
			    <td><%= number_to_currency(adm_pedido.total, :separator => ",", :delimiter => ".", :unit => "R$ ") %></td>
			    <td><%= adm_pedido.status.descricao %></td>
			  </tr>
			<% end %>
			</table>
		</div>
		<br />
	</div>
<!-- /main -->	
</div>
